
@{
    ViewBag.Title = "ListBook";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.TitlePageName</h2>
<link href="~/Content/style.css" rel="stylesheet" />
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
            <div class="panel panel-heading ">
                @item.Title
                @Html.ActionLink("Edit", "Edit", new { id = @item.Id }, new { @class = "pull-right" })
            </div>
            <div class="panel-body">
                <p>
                    <strong>Author:</strong> @item.Author
                </p>
                <p>
                    <strong>Public Year:</strong> @item.PublicYear
                </p>
                <p>
                    <strong>Price:</strong> @item.Price
                </p>
                <p>
                    <img src="/@item.Cover" alt="hinh thumnail" class="fix-img"/>
                </p>

            </div>
            <div class="panel-footer clearfix">
                <div class="pull-left">
                    @Html.ActionLink("Delete", "Delete", new { id = @item.Id }, new { @class = "pull-right" })
                </div>
                <div class="pull-right">
                    <a href="#" class="">
                        @Html.ActionLink("Order", "Order", new { Id = item.Id }, new { @class = "btn btn-primary" })
                    </a>
                    @Html.ActionLink("Read more...", "Detail", new {Id=item.Id}, new {@class="btn btn-default"})
                </div>
            </div>
        </div>
    }
</div>

